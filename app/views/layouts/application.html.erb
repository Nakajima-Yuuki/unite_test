<!DOCTYPE html>
<html>
  <head>
    <title>UniteTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header>
            <nav>
              <% if user_signed_in? %>
                <%= link_to 'サインアップ', new_user_registration_path %>
                <%= link_to 'ログイン', new_user_session_path %>
                <%= link_to "マイページ", user_path(current_user.id) %>
                <%= link_to 'プロフィール変更', edit_user_registration_path %>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
              <% elsif proposer_signed_in? %>
                <%= link_to 'プロポーサーサインアップ', new_proposer_registration_path %>
                <%= link_to 'プロポーサーログイン', new_proposer_session_path %>
                <%= link_to "マイページ", user_path(current_user.id) %>
                <%= link_to 'プロフィール変更', edit_proposer_registration_path %>
                <%= link_to 'プロポーサーログアウト', destroy_proposer_session_path, method: :delete %>
              <% else %>
                <%= link_to 'サインアップ', new_user_registration_path %>
                <%= link_to 'ログイン', new_user_session_path %>
                <%= link_to 'プロポーサーサインアップ', new_proposer_registration_path %>
                <%= link_to 'プロポーサーログイン', new_proposer_session_path %>
                <% end %>
            </nav>
        </header>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
